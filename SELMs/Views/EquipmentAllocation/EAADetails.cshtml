
@{
    ViewBag.Title = "Chi tiết đơn yêu cầu cấp phát thiết bị";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <!--Start Page Title-->
    <h1>Thông tin yêu cầu cấp phát thiết bị</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item"><a href="">Allocation Requests List</a></li>
            <li class="breadcrumb-item active">Create allocation equipment request</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">

        <div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin cơ bản</h4>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="lab" class="form-label">Phòng lab</label>
                            <input type="text" class="form-control" id="lab" disabled>
                        </div>
                        <div class="col-md-6">
                            <label for="receiver" class="form-label">Người tiếp nhận</label>
                            <input type="text" class="form-control" id="receiver" disabled>
                        </div>
                        <div class="col-md-6">
                            <label for="dateRequest" class="form-label">Ngày yêu cầu</label>
                            <input type="date" class="form-control" id="dateRequest" disabled>
                        </div>
                        <div class="col-md-6">
                            <label for="requester" class="form-label">Người yêu cầu</label>
                            <input type="text" class="form-control" id="requester" disabled>
                        </div>
                        <div class="col-md-6">
                            <label for="description" class="form-label">Mô tả</label>
                            <input type="text" class="form-control" id="description" disabled>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <div class="card">
                <div class="card-body">

                    <h5 class="card-title">Danh sách thiết bị</h5>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Mã thiết bị</th>
                                <th scope="col">Tên thiết bị</th>
                                <th scope="col">Mô tả/Thông số</th>
                                <th scope="col">Số lượng</th>
                                <th scope="col">Tình trạng</th>
                                <th scope="col">Ghi chú</th>
                                <th scope="col">Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quyết định phê duyệt</h5>
                    <div class="col-md-12">
                        <label for="suggested" class="form-label">Quản lý duyệt thiết bị đề nghị</label>
                        <input type="text" class="form-control" id="suggested" disabled>
                    </div>
                    <div>
                        <p></p>
                    </div>
                    <div class="col-md-12">
                        <button class="btn btn-primary">Chấp nhận</button>
                        <button class="btn btn-primary">Từ chối</button>
                    </div>
                    <div>
                        <p></p>
                    </div>
                    <div class="col-md-12">
                        <label for="reason" class="form-label">Lý do</label>
                        <input type="text" class="form-control" id="reason">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

