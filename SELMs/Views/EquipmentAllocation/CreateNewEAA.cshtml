
@{
    ViewBag.Title = "CreateNewEquipmentAllocationApplication";
    Layout = "~/Views/Shared/_LayoutLabDirector.cshtml";
}

<div class="pagetitle">

    <h1>Tạo yêu cầu cấp phát thiết bị</h1>
</div><!-- End Page Title -->
<div ng-app="myApp" ng-controller="CreateNewAllocationEquipmentsRequestCtrl" style="display:inline-block;width:100%;">
    <input type="hidden" id="username" name="username" value="@Session["username"]" />
    <input type="hidden" id="fullname" name="fullname" value="@Session["fullname"]" />
    <input type="hidden" id="role" name="role" value="@Session["role"]" />
    <input type="hidden" id="isadmin" name="isadmin" value="@Session["isadmin"]" />

    <div id="notification" class="col-md-12"></div>
    <section class="section">
        <form class="row g-3">
            <div class="row">

                <div>
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Thông tin cơ bản</h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="lab" class="form-label">Phòng lab</label>
                                    <input type="text" class="form-control" id="lab">
                                </div>
                                <div class="col-md-6">
                                    <label for="receiver" class="form-label">Người tiếp nhận</label>
                                    <input type="text" class="form-control" id="receiver">
                                </div>
                                <div class="col-md-6">
                                    <label for="dateRequest" class="form-label">Ngày yêu cầu</label>
                                    <input type="date" class="form-control" id="dateRequest">
                                </div>
                                <div class="col-md-6">
                                    <label for="requester" class="form-label">Người yêu cầu</label>
                                    <input type="text" class="form-control" id="requester">
                                </div>
                                <div class="col-md-6">
                                    <label for="description" class="form-label">Mô tả</label>
                                    <input type="text" class="form-control" id="description">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <div class="card">
                        <div class="card-body">

                            <h5 class="card-title">Danh sách thiết bị</h5>
                            <button type="submit" class="btn btn-secondary">Import list</button>
                            <button type="submit" class="btn btn-secondary">Import non list</button>
                            <!-- Table with stripped rows -->
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Mã thiết bị</th>
                                        <th scope="col">Tên thiết bị</th>
                                        <th scope="col">Mô tả/Thông số</th>
                                        <th scope="col">Số lượng</th>
                                        <th scope="col">Tình trạng</th>
                                        <th scope="col">Ghi chú</th>
                                        <th scope="col">Tác vụ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Tạo yêu cầu mới</button>
                </div>
            </div>
        </form>
    </section>
</div>
</div>
