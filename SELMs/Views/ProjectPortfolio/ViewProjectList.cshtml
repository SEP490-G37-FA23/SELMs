
@{
    ViewBag.Title = "ViewProjectList";
    Layout = "~/Views/Shared/_LayoutHumanResourceManagement.cshtml";
}

<div class="pagetitle">
    <h1>Danh Sách Dự Án</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/ProjectPortfolio/ViewProjectList">Projects List</a></li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">

    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Danh Sách Dự Án</h5>

                    <div class="row g-3">
                        <div class="col-md-3">
                            <a class="btn btn-primary" href="@Url.Action("CreateNewProject", "ProjectPortfolio")">Thêm dự án mới</a>
                        </div>
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-primary">Xuất file Excel</button>
                        </div>
                    </div>
                    <div>
                        <p></p>
                    </div>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th scope="col">Mã dự án</th>
                                <th scope="col">Dự ánán</th>
                                <th scope="col">Quản lý</th>
                                <th scope="col">Tags</th>
                                <th scope="col">Tasks</th>
                                <th scope="col">Trạng Thái</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>P202309280001</td>
                                <td>Adaptive Cruise Control System</td>
                                <td>SonVT2</td>
                                <td>Research, Automation</td>
                                <td>52/250</td>
                                <td>
                                    <select id="projectStatus" class="form-select">
                                        <option selected>Pending</option>
                                        <option>Activate</option>
                                        <option>Overdue</option>
                                        <option>Finished</option>
                                        <option>Canceled</option>
                                    </select>
                                </td>
                                <td>
                                    <button class="btn btn-warning" data-toggle="modal"
                                            data-target="#suakhachhang" ng-click="GetKH(item)">
                                        <i class="far fa-edit"></i>Edit
                                    </button>
                                    <button class="btn btn-danger" ng-click="DeleteKH(item)">
                                        <i class="fas fa-trash-alt"></i>Cancel
                                    </button>
                                    <a class="btn btn-primary" data-bs-toggle="modal"
                                       data-bs-target="#user-details">Finish</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>

