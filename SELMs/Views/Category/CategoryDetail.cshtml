
@{
    ViewBag.Title = "CategoryDetail";
    Layout = "~/Views/Shared/_LayoutStockManagement.cshtml";
}
<div ng-app="myApp" ng-controller="CategoryDetailCtrl" style="display:inline-block;width:100%;">
    <input type="hidden" id="username" name="username" value="@Session["username"]" />
    <input type="hidden" id="fullname" name="fullname" value="@Session["fullname"]" />
    <input type="hidden" id="role" name="role" value="@Session["role"]" />

    <div id="notification" class="col-md-12"></div>

    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="general_infor">
            <h4 class="card-title text-center">Thông tin chung</h4>
            <div class="row mb-3">
                <label class=" col-form-label" for="inputName5">Mã danh mục</label>
                <div>
                    <select class="form-select" aria-label="Default select example">
                        <option value="1">RB-1</option>
                        <option value="2">IoT</option>
                        <option value="3">SE</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class=" col-form-label">Tên danh mục</label>
                <div>
                    <select class="form-select" aria-label="Default select example">
                        <option value="1">Robot</option>
                        <option value="2">Internet of things</option>
                        <option value="3">Software enginerring</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class=" col-form-label">Số lượng thiết bị</label>
                <div>
                    <input type="number" class="form-control" id="inputText">
                </div>
            </div>
            <label class=" col-form-label">Mô tả danh mục</label>
            <div class="form-floating">
                <textarea class="form-control" placeholder="Mô tả danh mục" id="floatingTextarea"></textarea>

            </div>
        </div>
        <div>
        </div>
        <div role="tabpanel" class="tab-pane" id="detail">
            <h4 class="card-title text-center mb-3">Danh sách thiết bị</h4>
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-8 mt-3">
                            <input class="form-control" type="file" id="formFile">
                        </div>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã thiết bị</th>
                                <th>Tên thiết bị</th>
                                <th>Trạng thái thiết bị</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td><input type="text" style="border: hidden;"></td>
                                <td><input type="text" style="border: hidden;"></td>
                                <td><input type="text" style="border: hidden;"></td>
                            <tr>
                            <tr>
                                <th scope="row">2</th>
                                <td><input type="text" style="border: hidden;"></td>
                                <td><input type="text" style="border: hidden;"></td>
                                <td><input type="text" style="border: hidden;"></td>
                            <tr>
                            <tr>
                                <th scope="row">3</th>
                                <td><input type="text" style="border: hidden;"></td>
                                <td><input type="text" style="border: hidden;"></td>
                                <td><input type="text" style="border: hidden;"></td>
                            <tr>
                            <tr>
                                <th scope="row">4</th>
                                <td><input type="text" style="border: hidden;"></td>
                                <td><input type="text" style="border: hidden;"></td>
                                <td><input type="text" style="border: hidden;"></td>
                            <tr>
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>
