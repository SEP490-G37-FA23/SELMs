
@{
    ViewBag.Title = "AllocationEquipmentsRequestsListPV";
    Layout = "~/Views/Shared/_LayoutHumanResourceManagement.cshtml";
}

<div class="modal fade" id="allocation-list" tabindex="-1">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content" style="width:1500px; margin-left:-400px;">
            <div class="modal-header">
                <h5 class="modal-title">Danh sách yêu cầu cấp phát thiết bị</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <section class="section">

                <div class="row">
                    <div class="col-lg-12">

                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Danh sách yêu cầu cấp phát thiết bị</h5>

                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <a class="btn btn-primary" href="@Url.Action("CreateNewAllocationEquipmentsRequest", "AllocationEquipments")">Tạo yêu cầu mới</a>
                                    </div>
                                </div>
                                <div>
                                    <p></p>
                                </div>
                                <!-- Table with stripped rows -->
                                <table class="table datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Mã Đơn</th>
                                            <th scope="col">Người yêu cầu</th>
                                            <th scope="col">Người tiếp nhận</th>
                                            <th scope="col">Ngày yêu cầu</th>
                                            <th scope="col">Phòng lab</th>
                                            <th scope="col">Tổng số thiết bị</th>
                                            <th scope="col">Mô tả</th>
                                            <th scope="col">Trạng thái</th>
                                            <th scope="col">Tác vụ</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                        </tr>
                                    </tbody>
                                </table>
                                <!-- End Table with stripped rows -->

                            </div>
                        </div>

                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

