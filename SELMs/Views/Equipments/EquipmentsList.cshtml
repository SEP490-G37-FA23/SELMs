﻿
@{
    ViewBag.Title = "EquipmentsList";
    Layout = "~/Views/Shared/_LayoutStockManagement.cshtml";
}
<script src="~/Content/js/Stock/Equipments/EquipmentsListCtrl.js"></script>
<div ng-app="myApp" ng-controller="EquipmentsListCtrl" style="display:inline-block;width:100%;">
    <input type="hidden" id="username" name="username" value="@Session["username"]" />
    <input type="hidden" id="fullname" name="fullname" value="@Session["fullname"]" />
    <input type="hidden" id="role" name="role" value="@Session["role"]" />

    <div id="notification" class="col-md-12"></div>
    <br />

    <section class="section">

        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh Sách Thiết bị</h5>

                        <div class="row g-3">
                            <div class="col-md-3">
                                <a class="btn btn-primary" href="@Url.Action("CreateNewEquipment", "Equipments")">Thêm thiết bị mới</a>
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-primary" data-toggle="modal" data-target="#ImportListEquipments">Import danh sách thiết bị mới</button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-success" type="button" ng-click="tableToExcel('EquipData')"><i class="icon-spinner2 spinner"></i> Xuất excel</button>
                            </div>
                        </div>
                        <div>
                            <p></p>
                        </div>
                        <!-- Table with stripped rows -->
                        <table class="table" id="EquipData">
                            <thead>
                                <tr>
                                    <th>Tích</th>
                                    <th scope="col">Mã hệ thống </th>
                                    <th scope="col">Mã chuẩn</th>
                                    <th scope="col">Tên thiết bị</th>
                                    <th scope="col">Đơn vị tính</th>
                                    <th scope="col">SerieNo</th>
                                    <th scope="col">Ngày tạo</th>
                                    <th scope="col">Loại thiết bị</th>
                                    <th scope="col">Nhóm thiết bị</th>
                                    <th scope="col">Vị trí</th>
                                    <th scope="col">Người chịu trách nhiệm quản lý</th>
                                    <th scope="col">Trạng thái</th>
                                    <th scope="col">Tác vụ</th>

                                </tr>
                                <tr>
                                    <th scope="col"></th>
                                    <th colspan="3"><input type="text" ng-model="text2" ng-change="LoadEquipmentsList()" class="form-control" ng-model-options="{debounce:700}" /></th>
                                    <th scope="col"></th>
                                    <th scope="col"><input type="text" ng-model="text" ng-change="LoadEquipmentsList()" class="form-control" ng-model-options="{debounce:700}" /></th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                    <th scope="col"><input type="text" ng-model="text1" ng-change="LoadEquipmentsList()" class="form-control" ng-model-options="{debounce:700}" /></th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in ListEquips">
                                    <td><input type="checkbox" ng-model="item.checkked" /></td>
                                    <td>{{item.system_equipment_code}}</td>
                                    <td>{{item.standard_equipment_code}}</td>
                                    <td>{{item.equipment_name}}</td>
                                    <td>{{item.unit}}</td>
                                    <td>{{item.serial_no}}</td>
                                    <td>{{item.create_date|date:'dd/MM/yyyy'}}</td>
                                    <td>{{item.type_equipment}}</td>
                                    <td>{{item.category_name}}</td>
                                    <td>{{item.location_desciption}}</td>
                                    <td>{{item.responsibler}}</td>
                                    <td>{{item.usage_status}}</td>
                                    <td>
                                        <a class="btn btn-primary" data-bs-toggle="modal"
                                           data-bs-target="#user-details" ng-click="LoadEquipDetails(item)"><i class="far fa-info-square" style="color: #ffffff;"></i></a>
                                        <button class="btn btn-danger" ng-click="DeleteEquip(item)">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>

                                    </td>
                                </tr>
                                <tr>
                                    <th colspan="12">Tổng số thiết bị</th>
                                    <th>{{sumEquips}}</th>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

    <div class="modal fade" id="ImportListEquipments" role="dialog" tabindex="-1" style="overflow: auto;">
        <div class="modal-dialog modal-lg" style="width:100%; max-width: 1390px !important">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <div class="row" style="width: 100%">
                        <div class="col-md-12 text-center"><h4 class="text-white">Danh sách thiết bị mới </h4></div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="col-md-12" style="float: right">
                        <div class="col-md-6">
                            <label for="file-upload-sp" class="custom-file-upload">
                                <i class="fa fa-cloud-upload"></i>Import Excel
                            </label>

                            <form enctype="multipart/form-data">
                                <input id="file-upload-sp" type=file name="files[]">
                            </form>
                        </div>

                    </div>
                    <div lass="col-md-1" style="float: right">
                        <a href="~/Content/Files/ImportListEquip.xlsx" target="_blank">Lấy files mẫu</a>
                    </div>

                    <div class="col-md-12">
                        <ul class="nav nav-tabs">
                            <li><a data-toggle="tab" ng-click="loai = 'Thông tin thiết bị';">Thông tin thiết bị</a></li>
                            <li><a data-toggle="tab" ng-click="loai = 'Thiết bị thành phần';">Thiết bị thành phần</a></li>
                        </ul>
                        <table class="table" ng-show="loai == 'Thông tin thiết bị'">
                            <thead>
                                <tr>
                                    <th style="width:50px" rowspan="2">STT</th>
                                    <th style="min-width:120px" class="text-center" rowspan="2">Mã hàng</th>
                                    <th style="min-width:60px" class="text-center" rowspan="2">Giá list</th>
                                    <th style="min-width:80px" class="text-center" rowspan="2">Giá bán web</th>
                                    <th style="min-width:60px" class="text-center" rowspan="2">Giá KM</th>
                                    <th style="min-width:60px" class="text-center" rowspan="2">Số lượng KM</th>
                                    <th style="min-width:60px" class="text-center">Quà tặng</th>


                                </tr>
                                <tr>
                                    <th style="min-width:60px" class="text-center">Loại quà tặng</th>
                                    <th style="min-width:60px" class="text-center">Mã quà tặng</th>
                                    <th style="min-width:60px" class="text-center">Số lượng</th>
                                    <th style="min-width:60px" class="text-center">Giá trị</th>


                                </tr>

                            </thead>

                            <tbody>
                                <tr ng-repeat="(index,item) in ListEquipImport">
                                    <td class="text-center">{{$index +1}}</td>
                                    <td class="text-center">
                                        {{item.MA_HANG}}
                                    </td>
                                    <td class="text-center">
                                        {{item.GIA_LIST| currency: '':0}}
                                    </td>
                                    <td class="text-center">
                                        {{item.GIA_BAN_WEB| currency: '':0}}
                                    </td>
                                    <td class="text-center">
                                        {{item.GIA_KM| currency: '':0}}
                                    </td>
                                    <td class="text-center">
                                        {{item.SL_KM}}
                                    </td>
                                    <td class="text-center">
                                        {{item.LOAI_QUA_TANG}}
                                    </td>
                                    <td class="text-center">
                                        {{item.MA_QT}}
                                    </td>
                                    <td class="text-center">
                                        {{item.SO_LUONG}}
                                    </td>
                                    <td class="text-center">
                                        {{item.GIA_TRI_QT| currency: '':0}}
                                    </td>
                                    <td class="text-center">
                                        {{item.GIA_TRI_TOI_DA| currency: '':0}}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table" ng-show="loai == 'Thiết bị thành phần'">
                            <thead>
                                <tr>
                                    <th style="width:50px" rowspan="2">STT</th>
                                    <th style="min-width:120px" class="text-center">Khi mua mã hàng</th>
                                    <th style="min-width:60px" class="text-center">Mua kèm sản phẩm</th>
                                    <th style="min-width:80px" class="text-center">Giá bán thường</th>
                                    <th style="min-width:60px" class="text-center">Điều kiện</th>
                                    <th style="min-width:60px" class="text-center">Giá khuyến mãi</th>

                                </tr>

                            </thead>

                            <tbody>
                                <tr ng-repeat="(index,item) in ListComponentEquipImport">
                                    <td class="text-center">{{$index +1}}</td>
                                    <td class="text-center">
                                        {{item.MA_HANG_TG_KM}}
                                    </td>
                                    <td class="text-center">
                                        {{item.MA_HANG}}
                                    </td>
                                    <td class="text-center">
                                        {{item.GIA_BAN_THUONG| currency: '':0}}
                                    </td>
                                    <td class="text-center">
                                        {{item.DIEU_KIEN}}
                                    </td>
                                    <td class="text-center">
                                        {{item.GIA_KHUYEN_MAI| currency: '':0}}
                                    </td>

                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="modal-footer" style="margin-top: 30px;">
                    <center style="margin-top: 20px;">
                        <button id="exit" name="exit" class="btn btn-success" data-dismiss="modal" style="padding:5px !important" ng-click="SaveImport()">
                            Lưu
                        </button>
                        <button id="exit" name="exit" class="btn btn-danger" data-dismiss="modal" style="padding:5px !important">
                            Exit
                        </button>
                    </center>
                </div>
            </div>


        </div>
    </div>

</div>