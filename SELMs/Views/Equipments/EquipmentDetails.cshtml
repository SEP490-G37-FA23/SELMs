
@{
    ViewBag.Title = "ViewEquipmentDetails";
    Layout = "~/Views/Shared/_LayoutStockManagement.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"
        integrity="sha512-CNgIRecGo7nphbeZ04Sc13ka07paqdeTu0WR1IM4kNcpmBAUSHSQX0FslNhTDadL4O5SAGapGt4FodqL8My0mA=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="~/Content/js/Stock/Equipments/EquipmentsDetailCtrl.js"></script>
<div ng-app="myApp" ng-controller="EquipmentsDetailCtrl" style="display:inline-block;width:100%;">
    <input type="hidden" id="username" name="username" value="@Session["username"]" />
    <input type="hidden" id="fullname" name="fullname" value="@Session["fullname"]" />
    <input type="hidden" id="role" name="role" value="@Session["role"]" />

    <div id="notification" class="col-md-12"></div>
    <br />

    <section class="section">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <h5 class="card-title">Thông tin thiết bị</h5>
                </div>

                <!-- Multi Columns Form -->
                <form class="row g-3">
                    <div class="col-md-6">
                        <label for="equipId" class="form-label">Mã hệ thống</label>
                        <input type="text" class="form-control" ng-model="DetailEquip.system_equipment_code" disabled>
                    </div>
                    <div class="col-md-6">
                        <label for="equipId" class="form-label" style="font-weight:bold;max-width:250px">{{DetailEquip.system_equipment_code}} - {{DetailEquip.standard_equipment_code}} - {{DetailEquip.equipment_name}}</label>
                        <div id="id_qrcode" class="qrcode"></div>
                    </div>
                    <div class="col-md-6">
                        <label for="equipId" class="form-label">Mã chuẩn thiết bị</label>
                        <input type="text" class="form-control" ng-model="DetailEquip.standard_equipment_code">
                    </div>
                    <div class="col-md-6">
                        <label for="equipName" class="form-label">Tên thiết bị</label>
                        <input type="text" class="form-control" ng-model="DetailEquip.equipment_name">
                    </div>

                    <div class="col-md-6">
                        <label for="equipUnit" class="form-label">Đơn vị</label>
                        <select ng-model="DetailEquip.unit" class="form-select">
                            <option ng-repeat="item in ListUnits" value="{{item}}">{{item}}</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="equipPrice" class="form-label">Giá</label>
                        <input type="text" format="number" class="form-control" ng-model="DetailEquip.price">
                    </div>

                    <div class="col-md-4">
                        <label for="equipGroup" class="form-label">Loại thiết bị</label>
                        <select ng-model="DetailEquip.type_equipment" class="form-select">
                            <option value="shared">Thiết bị dùng chung</option>
                            <option value="private">Thiết bị dùng riêng</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="equipGroup" class="form-label">Nhóm thiết bị</label>
                        <select ng-model="DetailEquip.category_code" class="form-select">
                            <option ng-repeat="item in ListCategories" value="{{item.category_code}}">{{item.category_name}}</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="equipLocation" class="form-label">Vị trí</label>
                        <select ng-model="DetailEquip.location_id" class="form-select">
                            <option ng-repeat="item in ListLocations" value="{{item.location_id}}">
                                {{item.location_code}}- {{item.location_desciption}}
                            </option>
                        </select>
                    </div>
                    <div class="col-md-12">
                        <label for="equipSeri" class="form-label">Số Seri</label>
                        <input type="text" class="form-control" ng-model="DetailEquip.serial_no">
                    </div>
                    <div class="col-md-12" ng-show="DetailEquip.is_integration">
                        <h5 class="card-title">Danh sách thiết bị thành phần ghép thành thiết bị mới</h5>
                        <table class="table table-bordered border-primary">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Mã hệ thống</th>
                                    <th scope="col">Mã thiết bị</th>
                                    <th scope="col">Tên thiết bị</th>
                                    <th scope="col">Ghi chú</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in ListComponentEquips">
                                    <th scope="row">{{$index + 1}}</th>
                                    <td>
                                        <ng-form>
                                            <div class="form-equip">
                                                <input type="text" style="color:black" class="form-control input-form" autocomplete="off" ng-model="item.system_equipment_code" ng-change="LoadEquipmentsList(item.system_equipment_code)" ng-focus="showtableEquip = true" ng-blur="showtableEquip = false" ng-model-options="{debounce:700}" required>
                                            </div>

                                            <div class="input-group-btn" style="position:relative;width:100%;display:inline-block">
                                                <div class="dropdown-menu dropdown-menu-center borderRadius0 padding0" style="display: block;max-height: 400px;overflow:auto;position:absolute;width:100%" ng-show="showtableEquip">
                                                    <div class="table-responsive">
                                                        <table class="table">
                                                            <thead class="bg-blue text-white">
                                                                <tr>
                                                                    <th>Mã hệ thống</th>
                                                                    <th>Mã chuẩn</th>
                                                                    <th>Tên thiết bị</th>
                                                                    <th>Tình trạng thiết bị</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr style="cursor:pointer" ng-mousedown="HandelEquip(eq, item);" ng-repeat="eq in ListEquips">
                                                                    <td>{{eq.system_equipment_code}}</td>
                                                                    <td>{{eq.standard_equipment_code}}</td>
                                                                    <td>{{eq.equipment_name}}</td>
                                                                    <td>{{eq.usage_status}}</td>

                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>

                                        </ng-form>

                                    </td>
                                    <td>
                                        {{item.standard_equipment_code}}
                                    </td>
                                    <td>{{item.equipment_name}}</td>
                                    <td>{{item.usage_status}}</td>
                                    <td><i class="fas fa-minus-circle" style="color: #c01616;" ng-click="DeleteComponentEquip(ListComponentEquips,$index)"></i></td>
                                </tr>
                                <tr>
                                    <td colspan="5" ng-click="HandelComponentEquip(ListComponentEquips)" class="text-center">Thêm thiết bị thành phần mới</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                    <div class="col-md-4">
                        <label for="inputDob5" class="form-label">Ngày tạo</label>
                        <input type="text" id="createDate" autocomplete="off" datepicker ng-model="DetailEquip.create_date|date:'dd/MM/yyyy'" class="form-control input-form" disabled>
                    </div>
                    <div class="col-md-4">
                        <label for="equipRemark" class="form-label">Ghi chú</label>
                        <input type="text" class="form-control" ng-model="DetailEquip.note">
                    </div>
                    <div class="col-md-4">
                        <label for="response" class="form-label">Người chịu trách nhiệm</label>
                        <ng-form>
                            <div class="form-khachhang">
                                <input type="text" style="color:black" class="form-control input-form" autocomplete="off" ng-model="text" ng-change="LoadMembersList(text)" ng-focus="showtableMB = true" ng-blur="showtableMB = false" ng-model-options="{debounce:700}" required>
                                <input type="text" class="form-control" ng-model="DetailEquip.responsibler" style="display:none">
                            </div>

                            <div class="input-group-btn" style="position:relative;width:100%;display:inline-block">
                                <div class="dropdown-menu dropdown-menu-center borderRadius0 padding0" style="display: block;max-height: 400px;overflow:auto;position:absolute;width:100%" ng-show="showtableMB">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead class="bg-blue text-white">
                                                <tr>
                                                    <th>Họ tên</th>
                                                    <th>Chức vụ</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr style="cursor:pointer" ng-mousedown="HandelMember(mb, DetailEquip);" ng-repeat="mb in ListMembers">
                                                    <td>{{mb.fullname}}</td>
                                                    <td>{{mb.role_name}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </ng-form>

                    </div>
                    <div class="col-md-12">
                        <label for="equipStatus" class="form-label">Trạng thái</label>
                        <textarea ng-model="DetailEquip.usage_status" class="form-control"></textarea>
                    </div>
                    <div class="col-md-12">
                        <label for="equipStatus" class="form-label">Thông số kĩ thuật</label>
                        <textarea ng-model="DetailEquip.specification" class="form-control"></textarea>
                    </div>
                    <div class="col-md-12 row">
                        <label for="equipStatus" class="form-label">Hình ảnh thiết bị</label>
                        <img id="image" style="height: auto; width: auto" alt="Dynamic Image" src={{image_url}} class="col-md-3">
                        <br />
                        <input class="form-control; col-md-4" type="file" id="formFile" multiple>
                        @*<textarea ng-model="DetailEquip.img" class="form-control"></textarea>*@
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" ng-click="ValidateDataInput(DetailEquip)">Cập nhật</button>
                    </div>
                </form><!-- End Multi Columns Form -->

            </div>
        </div>
    </section>
</div>
