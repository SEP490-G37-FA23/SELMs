
@{
    ViewBag.Title = "AddNewMember";
    Layout = "~/Views/Shared/_LayoutHumanResourceManagement.cshtml";
}

<body>
    <section class="section">
        <form class="row g-3">
            <div class="row">
                <div>
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Ảnh đại diện</h4>



                        </div>
                    </div>
                </div>

                <div>
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Thông tin cá nhân</h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="inputName5" class="form-label">Họ và tên</label>
                                    <input type="text" class="form-control" id="inputName5">
                                </div>
                                <div class="col-md-6">
                                    <label for="inputDob5" class="form-label">Ngày sinh</label>
                                    <input type="date" class="form-control" id="inputDob5">
                                </div>
                                <div class="col-md-6">
                                    <label for="inputMemCode5" class="form-label">Mã nhân viên</label>
                                    <input type="password" class="form-control" id="inputMemCode5">
                                </div>
                                <div class="col-md-6">
                                    <label for="inputGender" class="form-label">Giới tính</label>
                                    <select id="inputGender" class="form-select">
                                        <option selected>Nam</option>
                                        <option>Nữ</option>
                                        <option>Khác</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Thông tin liên lạc</h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="inputPhoneNumber" class="form-label">Số điện thoại</label>
                                    <input type="text" class="form-control" id="inputPhoneNumber">
                                </div>
                                <div class="col-md-6">
                                    <label for="inputEmail" class="form-label">Địa chỉ Email</label>
                                    <input type="text" class="form-control" id="inputEmail">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Thông tin công việc</h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="inputDateAssign" class="form-label">Ngày ký hợp đồng</label>
                                    <input type="date" class="form-control" id="inputDateAssign">
                                </div>
                                <div class="col-md-6">
                                    <label for="inputDuration" class="form-label">Thời hạn hợp đồng</label>
                                    <input type="text" class="form-control" id="inputDuration">
                                </div>
                                <div class="col-md-6">
                                    <label for="inputDateBye" class="form-label">Ngày hết hạn hợp đồng</label>
                                    <input type="date" class="form-control" id="inputDateBye">
                                </div>
                                <div class="col-md-6">
                                    <label for="inputPosition" class="form-label">Vị trí công việc</label>
                                    <input type="text" class="form-control" id="inputPosition">
                                </div>
                                <div class="col-md-6">
                                    <label for="inputExperience" class="form-label">Kinh nghiệm</label>
                                    <input type="text" class="form-control" id="inputExperience">
                                </div>
                                <div class="col-md-6">
                                    <label for="inputJD" class="form-label">Mô tả công việc</label>
                                    <input type="text" class="form-control" id="inputJD">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Tạo tài khoản</h4>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label for="inputUsername" class="form-label">Tên đăng nhập</label>
                                    <input type="text" class="form-control" id="inputUsername">
                                </div>
                                <div class="col-md-4">
                                    <label for="inputNewPass" class="form-label">Mật khẩu mới</label>
                                    <input type="text" class="form-control" id="inputNewPass">
                                </div>
                                <div class="col-md-4">
                                    <label for="inputReNewPass" class="form-label">Nhập lại mật khẩu mới</label>
                                    <input type="text" class="form-control" id="inputReNewPass">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Thêm nhân viên mới</button>
                </div>
            </div>
        </form>
    </section>
</body>

